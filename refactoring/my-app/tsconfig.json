{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, //used js file
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,


    "strict": false,
    "noImplicitAny": false, //type inference(any)
    "strictNullChecks": false, 
    "noUnusedParameters": false, 
    "noUnusedLocals": false, 
    "noFallthroughCasesInSwitch": false, 
    "removeComments": false, 
    // "declaration": true,
    // "emitDeclarationOnly": true,
    "strictBindCallApply": false, //invoked with correct argument
    "useUnknownInCatchVariables": false, //change var type
    "strictFunctionTypes": false, //fun parameter checked
    "strictPropertyInitialization": false, 
    "strictBuiltinIteratorReturn": false,
    


    "allowUnreachableCode": true,
    "allowUnusedLabels": true, 
    "downlevelIteration": true,
     


    // "skipDefaultLibCheck": false,
    "outDir": "./src",
    "rootDir": "./src",
    
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],

  "exclude": [
    "node_modules"
  ]
}
